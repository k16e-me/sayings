---
import { Image } from 'astro:assets'

const { title, filename, alt, ...attrs } = Astro.props
---
<Image
    src={ filename }
    alt={ alt || `Illustration for the ${ title } collection` }
    width="1068"
    height="1488"
    class="object-contain r-image-dim"
    quality="100"
    { ...attrs }
/>