---
const { id, small, asDiv, class: parentClass } = Astro.props
---
{
    () => {
        if (small) {
            return (
                <button
                    class:list={[ parentClass, `h-11 w-11 bg-white`]}
                    id={ id }>
                    <slot/>
                </button>
            )
        } else if (asDiv) {
            return (
                <div
                    class:list={[ parentClass, `h-14 w-14 bg-slate-100`]}
                    id={ id }>
                    <slot/>
                </div>
            )
        } else {
            return (
                <button
                    class:list={[ parentClass, `h-14 w-14 bg-slate-100`]}
                    id={ id }>
                    <slot/>
                </button>
            )
        }
    }
}

<style>
    button, div {
        @apply flex items-center justify-center rounded-full shadow hover:shadow-xl transition duration-300;
    }
</style>