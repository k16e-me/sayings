---
import Lipsum from './Lipsum.astro'
import { isEmpty } from '../js/snips'
import { renderRichText } from '@storyblok/astro'
import Prose from './Prose.astro'

const { content } = Astro.props
---
<Prose
    class:list={ 'text-pretty [&_p]:whitespace-pre-wrap text-slate-600' }
    data-slideover='overview'
    data-slideover-title='Overview'>
	{
        () => {
            if (isEmpty(content?.content[0]?.content)) return <Lipsum size={ 1 }/>
            return (
                <Fragment set:html={ renderRichText(content) }/>
            )
        }
    }
</Prose>