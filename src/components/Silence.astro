---
const { bg, class: classes, ...props } = Astro.props
---
<div class="mt-auto">
    <div
        { ...props }
        class:list={[
            classes,
            `w-full rounded-xl flex items-end justify-end p-5 mt-5`
        ]}
        style={ `background-color: #${bg};` }>
        <p class="font-display text-fuchsia-600 -mb-2">
            Silence is golden
        </p>
    </div>
</div>