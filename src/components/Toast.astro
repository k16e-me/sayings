<div
    class="fixed flex justify-center w-full bottom-12 md:bottom-9 transition duration-300 ease-in-out opacity-0 translate-y-20"
    data-toast>
    <aside class="h-12 w-40 bg-slate-800 text-white flex items-center justify-center text-center rounded-full shadow">
        <h2 class="sr-only">Toast</h2>
        <span class="text-base font-medium">
            Link copied 🎉
        </span>
    </aside>
</div>

<script>
    import { arrayFrom, slideIn, slideOut, enter, leave } from '../js/snips'

    const
        linkCopy = arrayFrom('[data-copy]'),
        toast = document.querySelector('[data-toast]')

    linkCopy.forEach(link => {
        link.addEventListener('click', e => {
            e.preventDefault()

            navigator.clipboard.writeText(e.target.href)

            slideIn(toast, leave(), enter())
            setTimeout(() => {
                slideOut(toast, enter(), leave())
            }, 5000)
        })
    })
</script>