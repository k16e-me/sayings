---
import '@fontsource/limelight'
import Logo from '../components/Logo.astro'
import { useStoryblokApi } from '@storyblok/astro'

const storyblokApi = useStoryblokApi()

const { data: settings } = await storyblokApi.get('cdn/stories/settings', {
    version: import.meta.env.DEV ? 'draft' : 'published',
})

const site = settings.story.content
---

<!doctype html>

<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta name="description" content="Astro description"/>
		<meta name="viewport" content="width=device-width"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
		<meta name="generator" content={ Astro.generator }/>
		<title>
            { site.title }
        </title>
	</head>

	<body class="text-gray-700 text-lg flex min-h-screen flex-col">
        <header class="flex items-center justify-center text-center px-3 py-4">
            <a href="/" class="inline-block">
                <Logo/>
            </a>
        </header>

		<main class="flex-1">
            <slot/>
        </main>

        <footer class="flex items-center justify-center text-center">
            Coming soon...
        </footer>
	</body>
</html>

<style is:global>

</style>