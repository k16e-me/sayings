---
import Layout from '../layouts/Layout.astro'
import Wrapper from '../layouts/Wrapper.astro'
import Silence from '../components/Silence.astro'
---
<Layout
    pageTitle={ '404 - Page not found' }
    pageDescription={ `This page may have moved or hasn't been added, yet. Please use the home link to go back to the main page` }>
    <Wrapper>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-x-0 gap-y-14 sm:gap-y-16 lg:gap-9 py-5">
            <div class="col-span-1">
                <div class="lg:sticky lg:top-10 space-y-5 flex flex-col items-end lg:items-stretch">
                    <Silence bg={ 'f1f5f9' } class:list={ `h-[496px] lg:h-[472px]` }/>
                </div>
            </div>
            <div
                class="lg:col-span-2 flex flex-col justify-center lg:justify-start lg:pt-4">
                B
            </div>
        </div>
    </Wrapper>
</Layout>